rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Fungsi cek pemilik
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Hanya user yang bersangkutan yang boleh baca/tulis datanya sendiri
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /courses/{courseId} {
        allow read, write: if isOwner(userId);
      }

      match /tasks/{taskId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Izinkan user yang sudah login untuk membuat (create) feedback
    match /feedbacks/{feedbackId} {
      allow create: if request.auth != null;
      // Opsional: Hanya admin yang boleh baca (read), user cuma boleh kirim
    }
  }
}